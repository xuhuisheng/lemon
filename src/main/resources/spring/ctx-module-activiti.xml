            </list>
        </property>
    </bean>
    -->

    <!-- 在记录history之后执行的TaskListener -->
    <!--
    <bean id="postTaskListener" class="com.mossle.bpm.listener.ProxyTaskListener">
        <property name="taskListeners">
            <list>
